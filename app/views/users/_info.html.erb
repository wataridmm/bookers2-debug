<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to followings_user_path(user.id) do %>
        <%= render 'relationships/following_count', user: user %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to followers_user_path(user.id) do %>
    <%= render 'relationships/followers_count',user: user %>
    <% end %>
    </th>

  </tr>

<%#= render 'relationships/follow_form' %>
<tr>
  <th>
 <% if current_user != user %>
            <% if current_user.following?(user) %>
            <%= link_to 'unfollow', user_relationships_path(user.id), method: :delete %>
            <% else %>
            <%= link_to 'follow', user_relationships_path(user.id), method: :post %>
            <% end %>
            <% end %>
            </th>
</tr>
  </table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>